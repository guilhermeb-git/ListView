<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.listview.FormularioTarefaController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Cadastro de Tarefa" style="-fx-font-size: 18px;"/>
    <TextField fx:id="txtTitulo" promptText="Título"/>
    <TextArea fx:id="txtDescricao" promptText="Descrição" prefRowCount="4"/>
    <DatePicker fx:id="dpDataEntrega"/>
    <ComboBox fx:id="cbStatus" promptText="Selecione o Status"/>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Salvar" onAction="#salvarTarefa"/>
        <Button text="Cancelar" onAction="#cancelar"/>
    </HBox>
</VBox>


